        "magic_gun_charge_4": "textures/kurokumaft/items/gun/water/water_magic_gun_charge_4",
        "magic_gun_charge_5": "textures/kurokumaft/items/gun/water/water_magic_gun_charge_5",
        "magic_gun_charge_6": "textures/kurokumaft/items/gun/water/water_magic_gun_charge_6",
