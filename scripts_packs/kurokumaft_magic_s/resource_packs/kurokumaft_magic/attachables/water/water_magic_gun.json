        "wield": "animation.gun.wield",
        "wield_first_person_pull": "animation.gun.wield_first_person_pull"
      },
      "scripts": {
        "pre_animation": [
          "variable.charge_amount = query.property('kurokumaft:gun_charge_water') ? 10 : math.clamp((query.main_hand_item_max_duration - (query.main_hand_item_use_duration - query.frame_alpha + 1.0)) / 4, 1.0, 10.0f);"
        ],
        "animate": [
          "wield",
          {
            "wield_first_person_pull": "query.main_hand_item_use_duration > 0.0f && c.is_first_person"
          }
        ]
      },
      "render_controllers": [ "controller.render.magic_gun" ]
    }
  }
