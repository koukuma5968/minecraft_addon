{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "kurokumaft:lightning_magic_bow",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/kurokumaft/items/bow/lightning/lightning_magic_bow_standby",
        "bow_pulling_0": "textures/kurokumaft/items/bow/lightning/lightning_magic_bow_pulling_0",
        "bow_pulling_1": "textures/kurokumaft/items/bow/lightning/lightning_magic_bow_pulling_1",
        "bow_pulling_2": "textures/kurokumaft/items/bow/lightning/lightning_magic_bow_pulling_2",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.magic_bow_standby",
        "bow_pulling_0": "geometry.magic_bow_pulling_0",
        "bow_pulling_1": "geometry.magic_bow_pulling_1",
        "bow_pulling_2": "geometry.magic_bow_pulling_2"
      },
      "animations": {
        "wield": "animation.bow.wield",
        "wield_first_person_pull": "animation.bow.wield_first_person_pull"
      },
      "scripts": {
        "pre_animation": [
          "variable.charge_amount = math.clamp((query.main_hand_item_max_duration - (query.main_hand_item_use_duration - query.frame_alpha + 1.0)) / 6.0, 1.0, 3.0f);"
        ],
        "animate": [
          "wield",
          {
            "wield_first_person_pull": "query.main_hand_item_use_duration > 0.0f && c.is_first_person"
          }
        ]
      },
      "render_controllers": [ "controller.render.magic_bow" ]
    }
  }
}
