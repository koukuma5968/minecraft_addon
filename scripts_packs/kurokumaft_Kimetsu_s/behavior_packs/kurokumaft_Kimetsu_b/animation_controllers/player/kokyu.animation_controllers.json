{
  "format_version": "1.21.10",
  "animation_controllers": {
    "controller.animation.kokyu.attack": {
      "states": {
        "default": {
          "transitions": [
            { "attack": "variable.attack_time > 0 && !query.property('kurokumaft:kokyu_attack')" }
          ]
        },
        "attack":{
          "on_exit": [
            "/event entity @s kurokumaft:attack_time"
          ],
          "transitions": [
            {"default":"!query.property('kurokumaft:kokyu_attack')"}
          ]
        }
      }
    }
  }
}