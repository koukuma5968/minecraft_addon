{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.douma_sensu.wield": {
			"states": {
				"default": {
					"animations": ["first"],
					"transitions": [
						{"third": "!c.is_first_person && query.owner_identifier != 'kurokumaft:douma'"},
						{"douma": "query.owner_identifier == 'kurokumaft:douma'"}
					]
				},
				"third": {
					"animations": ["third"],
					"transitions": [
						{"default": "c.is_first_person"}
					]
				},
				"douma": {
					"animations": ["douma"]
				}
			}
		}
	}
}