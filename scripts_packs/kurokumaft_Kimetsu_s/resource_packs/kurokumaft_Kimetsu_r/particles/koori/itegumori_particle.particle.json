{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "kurokumaft:itegumori_particle",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/campfire_smoke"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 50,
				"max_particles": 60
			},
			"minecraft:emitter_lifetime_expression": {
				"activation_expression": 1,
				"expiration_expression": "(variable.emitter_age > 1 ? 1.0 : 0.0)"
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, "math.random(0, 1)", 0],
				"radius": 3,
				"direction": ["math.random(-5, 5)", 0.5, "math.random(-5, 5)"]
			},
			"minecraft:particle_initialization": {
				"per_render_expression": "variable.size = 0.75 * math.pow(1.0-(variable.particle_age / variable.particle_lifetime), 0.08);"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 3
			},
			"minecraft:particle_initial_speed": 1,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.random(-10, 10)", 0, "math.random(-10, 10)"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.particle_age*3", "variable.particle_age*1.5"],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 1,
					"texture_height": 12,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [1, 1],
						"step_UV": [0, 1],
						"frames_per_second": 12,
						"max_frame": 12
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"enabled": "variable.particle_age > 1",
				"collision_radius": 0.25
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": [0.55294, 0.65098, 0.81176, 0.61176]
			}
		}
	}
}