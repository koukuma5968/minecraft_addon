{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "kurokumaft:mizu_side_crescent_moon",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "query.property('kurokumaft:kaikyu')*30",
				"max_particles": "query.property('kurokumaft:kaikyu')*30"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.1
			},
			"minecraft:emitter_shape_point": {
				"offset": ["1 + math.cos(variable.particle_random_1 * 70)", "-0.5 + math.random(-0.1, 0.2)", "math.sin(variable.particle_random_1 * (math.random_integer(0, 1) > 0 ? -90 : 90)) * 2"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.4
			},
			"minecraft:particle_initial_speed": 1,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0.5, 0.5, 0],
				"linear_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.25, 0.25],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": [1, 12],
					"uv_size": [7, 7]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.25": "#FFD3E1EF",
						"0.79": "#FF4F8BF4"
					}
				}
			}
		}
	}
}
